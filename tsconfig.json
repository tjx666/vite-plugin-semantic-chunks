{
    "compilerOptions": {
        "target": "es2022",
        "module": "esnext",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "bundler",
        "skipLibCheck": true,
        "noUnusedLocals": false,
        "resolveJsonModule": true,
        "types": ["node"]
    },
    "include": ["src", "tests", "scripts"],
    "exclude": ["tests/fixtures"]
}
